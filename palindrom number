#include<stdio.h>
main()
{
    int a,b,div,R,i;
    printf("Enter the number,a=");
    scanf("%d",&a);
    b=a;
    i=0;
    while(div!=0)
    {
        R=a%10;
        div=a/10;
        a=div;
        i=(i*10)+R;
    }
    printf("after reversing the number= %d\n",i);
    if(b==i)
    {
        printf("This is a palindromic number");
    }
    else
    {

    printf("This is not a palindromic number");
    }
    return 0;
}
